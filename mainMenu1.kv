<MainMenu1>:
    GridLayout:
    # Image de fond
        # canvas.before:
        #     BorderImage:
        #         border: 10, 10, 10, 10
        #         source: 'client/Images/lava1.jpg'
        #         pos: self.pos
        #         size: self.size
    BoxLayout:
        pos_hint: {"center_x": .5, "center_y": .5}
        size_hint: .25,.5
        orientation: 'vertical'
        Label:
            id: updateWorlds_output_id
            pos_hint: {'center_x':.5,'center_y':.5}
            text: ""
            font_size: 16
            color: 1,1,1,1
            size_hint: 1,.7
        Button:
            text: "Play"
            background_color: (1.0, 0.0, 0.0, .75)
            on_press: 
                if app._isLogged: app.manager.push("Playingmode")
                else: root.logInQuestion(root.yesPlay,root.noPlay), app.ButtonSound()
                        

        Button:
            text: "Games"
            # on_press: 

        Button:
            text: "Rules of the game"
            on_press: app.manager.push("Rules"), app.ButtonSound()

        Button:
            text: "Settings"
            on_press: 
                if app._isLogged: app.manager.push("SettingsMenu"), app.ButtonSound()
                else: root.logInQuestion(root.yesSettings,root.noSettings), app.ButtonSound()
        
        Button:
            text: "Credits"
            on_press: app.manager.push("Credits"), app.ButtonSound()
        Button:
            id:btnExit
            text:"Exit"
            on_press: app.ButtonSound(), app.stop()