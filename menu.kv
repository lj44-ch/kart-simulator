#:import navigation_screen_manager navigation_screen_manager
#:import layouts layouts
#:import action_bar action_bar

<MainMenu@BoxLayout>:
    orientation: "vertical"
    Button:
        text: "Sign in / Log in"
        on_press: app.manager.push("connection")
    Button:
        text: "Play"
        on_press: app.start_ks()
    Button:
        text: "Rules of the game"
        on_press: app.manager.push("Rules")


<KS_screen>:
    name: "Kart_Simulator"
    BoxLayoutWithActionBar:
        title: "Kart_simulator"
        KS:

<MyScreenManager>:
    Screen:
        name: "MainMenu"    
        MainMenu:
    Screen:
        name: "connection"
        BoxLayoutWithActionBar:
            title: "Sign in / Log in"
            MenuTabbedPanel:
    Screen:
        name: "Rules"
        BoxLayoutWithActionBar:
            title: "Rules of the game"
            Rules:


<KS>:
    orientation: 'horizontal'
    Button:
        text: root.button_text
        size_hint: .1,.1
        pos_hint: {'x': 0 , 'y': 0 }
        on_press: root.pause()

<Rules@BoxLayout>:
