<UserSettings>:
    GridLayout:
    # Image de fond
        # canvas.before:
        #     BorderImage:
        #         border: 10, 10, 10, 10
        #         source: 'client/Images/lava1.jpg'
        #         pos: self.pos
        #         size: self.size
    BoxLayout:
        pos_hint: {"center_x": .5, "center_y": .5}
        size_hint: .25,.25
        orientation: 'vertical'
        Button:
            text: "My kart"
            on_press: 
                if app.is_logged(): app.manager.push("Kart_Settings"), app.ButtonSound()
                else: root.SettingsPopup()

        Button:
            text: "My Music"
            on_press: 
                if app.is_logged: app.manager.push("Music_Settings"), app.ButtonSound()
                else: root.SettingsPopup()

        Spinner:
            id: pov_spinner_id
            text: "Chose your POV !"
            values: ["Third Person", "First Person"]
            on_text:
                root.updatePOVSettings(pov_spinner_id.text), app.ButtonSound()

        Button:
            text: "Log In / Log Out"
            on_press: 
                app.ButtonSound(),
                if app.is_logged(): app.logOut()
                else: app.manager.push("LogIn")