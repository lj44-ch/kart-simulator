    
<JoinGame>:
    # Image de fond
    canvas.before:
        BorderImage:
            border: 10, 10, 10, 10
            source: 'client/Images/background.jpg'
            pos: self.pos
            size: self.size

    TextInput:
        pos_hint: {'center_x':.5,'y':.5}
        size_hint: .2, .05
        id: gameName
        hint_text: "Game name"
    Button:
        pos_hint: {'center_x':.5,'y':.4}
        size_hint: .2, .1
        text: "Join game"
        on_press: root.join(), app.ButtonSound()
    Label:
        id: labelID
        pos_hint: {"center_x":.5,"center_y":.5}
        text:""
        text_size: self.size
        halign: 'center'
        valign: 'middle'
        font_size: 32