<Credits>:
    GridLayout:
    # Image de fond
        canvas.before:
            BorderImage:
                border: 10, 10, 10, 10
                source: 'client/Images/red_bg.png'
                pos: self.pos
                size: self.size

    Label:
        bold: True
        text: "Credits for the Kart Simulator"
        pos_hint: {'center_x':.7,'y': .9}
        font_size: 32
        color: 1,0,0,.75
        size_hint: 1,.1

    Label:
        pos_hint: {'center_x':.7 , 'center_y':.5 }
        size_hint: .2, .1
        padding: .05,.05
        italic: True
        text: "Merci à Tristan Genoud pour la superbe musique 'The stupid song'\nMerci à tous ceux qui ont pris le temps de créer des nouveaux circuit"
        font_size: 16
        color: 0,0,0,1
        size_hint: 6,.9