<Credits@BoxLayout>:
    orientation: "vertical"
    Label:
        bold: True
        text: "Credits for the Kart Simulator"
        font_size: 32
        color: .8,.4,.2,1
        size_hint: 1,.1
        canvas.before:
            Color:
                rgba: 0, 0, 0, 1
            Rectangle:
                pos: self.pos
                size: self.size
    Label:
        italic: True
        text: " - Merci moi."
        font_size: 16
        color: 0,0,0,1
        size_hint: 1,.9
        canvas.before:
            Color:
                rgba: .8,.4,.2,1
            Rectangle:
                pos: self.pos
                size: self.size