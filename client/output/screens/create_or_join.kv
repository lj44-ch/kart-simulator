<CreateOrJoin>:
    BoxLayout:
        pos_hint: {"center_x": .5, "center_y": .5}
        size_hint: .4,.3
        orientation: 'vertical'

        Button:
            text: "Create a new game"
            on_press: app.manager.push("CreateMPGame")
        Button:
            text: "Join an existing game"
            on_press: app.manager.push("JoinMPGame")