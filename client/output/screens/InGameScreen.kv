<EndGameMode>:
    canvas.before:
        Color:
            rgba: 0,0,0,.5
        Rectangle:
            pos: self.pos
            size: self.size

    Label:
        id: gameOverLabel_id
        text: ""
        font_size: 74
        halign: 'center'
        color: 0.4, 1, 0.4, 1

    Button:
        size_hint:.2,.1
        pos_hint: {'x':.4, 'y': .45}
        text:"Quit game"
        on_release: app.manager.popAll(), app.clear_game(), app.ButtonSound()




<PauseMode>:
    Button:
        size_hint:.2,.1
        pos_hint: {'x': .4 , 'y': .5 }
        text:"Resume"
        on_release: app.game.change_gameState(), app.ButtonSound()
    Button:
        size_hint:.2,.1
        pos_hint: {'x': .4 , 'y': .4 }
        text:"Settings"
        on_release: app.manager.push("SettingsMenu"), app.ButtonSound()    
    Button:
        size_hint:.2,.1
        pos_hint: {'x': .4 , 'y': .3 }
        text:"Quit game"
        on_release: app.game.disconnect(), app.manager.popAll(), app.ButtonSound()
    
<WaitingRoom>:
    canvas.before:
        Color:
            rgba: 0,0,0,.15
        Rectangle:
            pos:self.pos
            size:self.size

    Label:
        id: game_info
        pos_hint: {'center_x': .8, 'center_y':.3 }
        size_hint: .38, .6
        color: 0,0,0,1
        text: 'Game informations:\n\n'
        valign: "bottom"
        markup: True

<KS_screen>:
    name: "Kart_Simulator"
    layout_id: noActionBar
    size: app.windowSize()

    ScatterLayout:
        id: noActionBar
        pos: 0,0
        size: root.size
        do_translation: False
        do_rotation: False
        do_scale: False

    FloatLayout:
        id: animationLayout
        pos: 0,0
        size: app.windowSize()

    
    GridLayout:
        cols: 6
        rows: 1
        pos_hint: {'x': .25, 'y': .95}
        size_hint: .5, .05
        canvas.before:
            Color:
                rgba: 0,0,0,.5
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            text: "Laps"
            color: 0.4, 1, 0.4, .5

        Label:
            id: laps_id
            text: "--/--"
            color: 0.4, 1, 0.4, .5

        Label:
            text: "Gates"
            color: 0.4, 1, 0.4, .5

        Label:
            id: gates_id
            text: "--/--"
            color: 0.4, 1, 0.4, .5
        Label:
            text: "Timer"
            color: 0.4, 1, 0.4, .5
        Label:
            id: timer_id
            text: "00:00:00"
            color: 0.4, 1, 0.4, .5

